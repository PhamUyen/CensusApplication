<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <Button
        android:id="@+id/btn_interview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:background="@drawable/bg_border_button"
        android:text="@string/txt_family_interview"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_sync"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_button"
        android:text="@string/txt_sync_data"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_button"
        android:text="@string/txt_update"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_button"
        android:text="@string/txt_search_data"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_button"
        android:text="@string/txt_logout"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_button"
        android:text="@string/txt_exit"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />
</LinearLayout>
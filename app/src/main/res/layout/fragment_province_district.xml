<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large">
    <TextView
        android:id="@+id/tv_question"
        android:layout_marginLeft="@dimen/margin_normal_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="@dimen/ts_15"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/lnContent"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên tỉnh/thành phố"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_small_x"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:id="@+id/edCodeProvince"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:background="@drawable/bg_edit_text"/>
                <Spinner
                    android:id="@+id/spinnerProvince"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/bg_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext">

                </Spinner>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên quận/huyện"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_small_x"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:id="@+id/edCodeDistrict"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:background="@drawable/bg_edit_text"/>
                <Spinner
                    android:id="@+id/spinnerDistrict"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/bg_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext">

                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
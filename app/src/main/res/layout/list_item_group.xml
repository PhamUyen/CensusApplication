<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_light"
    android:padding="@dimen/padding_small_x">

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_17"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imv_arrow"
        android:layout_width="@dimen/icon_50"
        android:layout_height="@dimen/icon_30"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_small_x"
        android:src="@drawable/ic_arrow_down"/>
</RelativeLayout>